    {
      "id": "llm_advanced_001",
      "category": "LLM高级规则",
      "description": "复杂逻辑推理测试",
      "documentId": "doc_llm_001",
      "ruleSetId": "ruleset_llm_reasoning",
      "inputText": "保险期间内，被保险人因疾病住院治疗超过3天的，每天给付住院津贴100元，最高给付90天。但等待期内发生的疾病不予赔付。",
      "rules": [
        {
          "type": "llm",
          "mode": "chain_of_thought",
          "query": "如果被保险人在等待期后因疾病住院7天，应该赔付多少住院津贴？",
          "expectedLogic": "住院超过3天 AND 非等待期疾病 THEN 给付(住院天数 * 100元)"
        }
      ],
      "expectedResults": [
        {
          "ruleId": "rule_007",
          "matched": true,
          "evidence": "住院7天，超过3天，非等待期，应给付700元",
          "reasoning": "根据条款，住院超过3天每天给付100元，7天应给付7*100=700元",
          "confidence": 0.92,
          "calculatedAmount": 700
        }
      ]
    },
    {
      "id": "llm_advanced_002",
      "category": "LLM高级规则",
      "description": "多条件判断测试",
      "documentId": "doc_llm_002",
      "ruleSetId": "ruleset_multi_condition",
      "inputText": "年龄在18-65周岁之间，身体健康，无既往重大疾病史的人员可以投保。保费根据年龄和职业类别确定。",
      "rules": [
        {
          "type": "llm",
          "mode": "direct_prompt",
          "query": "一个30岁的办公室白领，无疾病史，是否符合投保条件？",
          "expectedConditions": ["年龄符合", "身体健康", "无重大疾病史"]
        }
      ],
      "expectedResults": [
        {
          "ruleId": "rule_008",
          "matched": true,
