# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 数据库配置
DB_USERNAME=insurance_user
DB_PASSWORD=20150826
MYSQL_ROOT_PASSWORD=20150826

# Redis配置
REDIS_PASSWORD=your_redis_password_here

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters_long

# CORS配置
CORS_ALLOWED_ORIGINS=https://insurance-audit.com,https://www.insurance-audit.com

# 监控配置
GRAFANA_PASSWORD=your_grafana_password_here

# SSL证书路径（如果使用HTTPS）
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# 备份配置
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点备份
BACKUP_RETENTION_DAYS=30

# 邮件配置（用于告警）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@insurance-audit.com
SMTP_PASSWORD=your_smtp_password_here
ALERT_EMAIL=admin@insurance-audit.com